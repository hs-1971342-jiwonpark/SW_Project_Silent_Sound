<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_blue"
        tools:context=".ui.view.setting.SettingFragment">

        <ImageView
            android:layout_marginTop="40dp"
            android:id="@+id/activity_main_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/main_head"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_title"
            android:layout_marginTop="165dp"
            app:layout_constraintEnd_toEndOf="@id/activity_main_logo_iv"
            app:layout_constraintStart_toStartOf="@id/activity_main_logo_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/activity_main_play_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_pause"
            app:layout_constraintEnd_toEndOf="@id/activity_main_logo_iv"
            app:layout_constraintStart_toStartOf="@id/activity_main_logo_iv"
            app:layout_constraintTop_toBottomOf="@id/activity_main_logo_iv" />

        <ImageView
            android:background="@drawable/ic_audio_on"
            app:layout_constraintStart_toStartOf="@id/activity_main_logo_iv"
            app:layout_constraintEnd_toEndOf="@id/activity_main_logo_iv"
            app:layout_constraintBottom_toBottomOf="@id/activity_main_logo_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/activity_main_audio_on_iv"
            />

        <ImageView
            android:id="@+id/activity_main_setting_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="65dp"
            android:layout_marginEnd="25dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>